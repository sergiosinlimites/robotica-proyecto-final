<launch>
    <let name="urdf_path"
         value="$(find-pkg-share phantomx_pincher_description)/urdf/phantomx_pincher.urdf.xacro"/>
    <let name="rviz_config_path"
         value="$(find-pkg-share phantomx_pincher_description)/rviz/urdf_config.rviz"/>

    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description"
               value="$(command 'xacro $(var urdf_path)')" />
    </node>

    <!-- Use the POSITION controllers config -->
    <node pkg="controller_manager" exec="ros2_control_node">
        <param from="$(find-pkg-share phantomx_pincher_bringup)/config/controllers_position.yaml" />
    </node>

    <!-- Controller names must match controllers_position.yaml -->
    <node pkg="controller_manager" exec="spawner" args="joint_state_broadcaster" />
    <node pkg="controller_manager" exec="spawner" args="joint_trajectory_controller" />
    <node pkg="controller_manager" exec="spawner" args="gripper_trajectory_controller" />

    <include file="$(find-pkg-share phantomx_pincher_moveit_config)/launch/move_group.launch.py" />

    <node pkg="rviz2" exec="rviz2" output="screen"
          args="-d $(var rviz_config_path)" />
</launch>
